<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PreferenceTheme">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>
    <style name= "AppTheme.Akari" parent="AppTheme" >
        <item name="colorPrimary">@color/colorPrimary_akari</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_akari</item>
        <item name="colorAccent">@color/colorAccent_akari</item>
    </style>
    <style name="AppTheme.kaeru" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary_kaeru</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_kaeru</item>
        <item name="colorAccent">@color/colorAccent_kaeru</item>

    </style>
    <style name="AppTheme.Akari.NoActionBar" parent="AppTheme.Akari" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.kaeru.NoActionBar" parent="AppTheme.kaeru" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.PreferenceTheme.Akari" parent="AppTheme.PreferenceTheme">
        <item name="colorPrimary">@color/colorPrimary_akari</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_akari</item>
        <item name="colorAccent">@color/colorAccent_akari</item>
    </style>
    <style name="AppTheme.PreferenceTheme.kaeru" parent="AppTheme.PreferenceTheme">
        <item name="colorPrimary">@color/colorPrimary_kaeru</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_kaeru</item>
        <item name="colorAccent">@color/colorAccent_kaeru</item>
    </style>

</resources>